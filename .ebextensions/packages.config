packages:
  yum:
    git: []
    postgresql94-devel: []

commands:
  01_remove_node:
    command: "rm -fv /etc/yum.repos.d/nodesource*"
  02_clean_yum:
    command: yum clean all
  03_install_nodejs:
    command: yum -y install nodejs
  04_install_yarn:
    command: "sudo wget https://dl.yarnpkg.com/rpm/yarn.repo -O /etc/yum.repos.d/yarn.repo && curl --silent --location https://rpm.nodesource.com/setup_10.x | sudo bash - && sudo yum install yarn -y"
  05_download_nodejs:
    command: "dcurl --silent --location https://rpm.nodesource.com/setup_10.x
     | sudo bash - "
  06_copy_nltk_data:
    command: "aws s3 cp s3://ppr-nltk-data/nltk_data  /usr/local/share/nltk_data --recursive"